<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title></title>
    <link rel="stylesheet" href="/css/workout_show.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand|Handlee|Josefin+Slab|Poiret+One" rel="stylesheet">
  </head>
  <body>
    <div class="container clearfix">
      <header class="header">
        <h1>Get<span class="logo">Fit</span></h1>
        <nav class="nav">
          <% if(currentuser === undefined){ %>
          <a href="/">Home</a>
          <a href="/workouts">Workouts Main</a>
          <% } else { %>
            <a href="/">Home</a>
            <a href="/workouts">Workouts Main</a>
            <a href="/workouts/<%=workout._id%>/edit">Edit Workout</a>
          <% } %>
        </nav>
      </header>
    </div>
    <div>
      <div class="workout-main">
        <img src="<%=workout.image%>"/><br>
        <p><%=workout.title%></p><br>
        <hr>
        <%=workout.day%><br>
        <%=workout.duration%><br>
        <%=workout.description%>
        <h5> Workout by: <a href="/users/<%=user._id%>"><%=user.username%>&hearts;</a></h5>
        <% if(currentuser !== undefined){ %>
          <form class="button-form" action="/workouts/<%=workout._id%>?_method=DELETE" method="POST">
            <input class="button" type="submit" value="Delete Workout">
          </form><br>
        <% } %>
      </div>
    </div>
  </body>
</html>
