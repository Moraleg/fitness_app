<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Fitness App</title>
    <link rel="stylesheet" href="/css/user_show.css">
    <link href="https://fonts.googleapis.com/css?family=Quicksand|Handlee|Josefin+Slab|Poiret+One" rel="stylesheet">
  </head>
  <body>
    <div class="container clearfix">
      <header class="header">
        <h1>Get<span class="logo">Fit</span></h1>
        <nav class="nav">
        <% if(currentuser === undefined){ %>
        <a href="/">Home</a>
        <% } else { %>
          <a href="/">Home</a>
          <a href="/workouts">Workouts</a>
          <a href="/users/<%=user._id%>/edit">Edit User</a>
        <% } %>
        </nav>
      </header>
    </div>
    <div class="user-index">
      <div class="profile-img">
        <img  class="profile-pic" src="<%=user.userImg%>"/><br>
      </div>
  			<h6>Workouts by <%=user.username%>:</h6>
          <div class="users">
  					<% for(var i = 0; i < user.workouts.length; i++){ %>
  						<div class="workout-post">
                <p><img class="image-post" src="<%=user.workouts[i].image%>"></p>
  							<a href="/workouts/<%=user.workouts[i]._id%>"><%=user.workouts[i].title%></a>
  						</div>
  						<%}%>
  				</div>
  		</div>
      <div class="buttons">
        <form action="/sessions?_method=DELETE" method="POST">
          <input class="button" type="submit" value="Logout">
        </form>
        <form class="button-form" action="/users/<%=user._id%>?_method=DELETE" method="POST">
        <input class="button" type="submit" value="Delete Profile">
        </form>
      </div>
    </main>
  </body>
</html>
